<?xml version="1.0" encoding="UTF-8"?>
<profiles version="21">
    <profile kind="CodeFormatterProfile" name="CustomFormatter" version="21">

        <!-- Indentation -->
        <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
        <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>

        <!-- Braces positions -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_type_declaration" value="next_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_method_declaration" value="next_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_block" value="next_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_control_statement" value="end_of_line"/>

        <!-- Whitespace -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_brace_in_method_declaration" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_method_call_arguments" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_method_declaration_parameters" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_array_initializer" value="true"/>

        <!-- Line wrapping -->
        <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="120"/>

        <!-- Control statements -->
        <setting id="org.eclipse.jdt.core.formatter.keep_simple_if_on_one_line" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.keep_then_statement_on_same_line" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.keep_else_statement_on_same_line" value="true"/>

        <!-- Comments -->
        <setting id="org.eclipse.jdt.core.formatter.comment.line_length" value="120"/>
        <setting id="org.eclipse.jdt.core.formatter.format_line_comments" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.format_block_comments" value="true"/>

    </profile>
</profiles>
